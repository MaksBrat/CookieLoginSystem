@model LoginSystem.Domain.ViewModel.Account.LoginViewModel



<div class="row justify-content-center">
    <div class=" w-50">
        <div class="col-md-10">
            <form asp-action="Login" asp-controller="Account">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Name">Enter name</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Password">Enter password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password" />
                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary mt-1 w-100 " />
                </div>
            </form>                    
        </div>
    </div>
</div>
